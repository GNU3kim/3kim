<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".ShareActivity">

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="368dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">


        <ImageView
            android:id="@+id/TimeMin"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:src="@drawable/time" />

        <TextView
            android:id="@+id/ITime"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="15"
            android:textColor="#6a0000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/ITimetextView"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="시"
            android:textColor="#6a0000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/IMin"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="30"
            android:textColor="#6a0000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/IMinTextView"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="분"
            android:textColor="#6a0000"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="368dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6">


        <ImageView
            android:id="@+id/IDestextView"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/dest" />

        <TextView
            android:id="@+id/IDes"
            android:layout_width="288dp"
            android:layout_height="match_parent"
            android:text="칠암동"
            android:textColor="#6a0000"
            android:gravity="center"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="368dp"
        android:layout_height="56dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/depart"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/dprt" />

        <TextView
            android:id="@+id/IDep"
            android:layout_width="288dp"
            android:layout_height="match_parent"
            android:text="가좌동"
            android:textColor="#6a0000"
            android:gravity="center"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="368dp"
        android:layout_height="198dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout8">

        <ImageView
            android:id="@+id/SayTextView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:src="@drawable/saysomething" />

        <TextView
            android:id="@+id/ISay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="날씨도 추운데 택시 같이 탑시다 ㅠㅠ"
            android:textColor="#6a0000"
            android:textSize="18dp"
            android:gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="34dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout9">

        <ImageView
            android:id="@+id/NoticeTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
        android:src="@drawable/asking" />
    </LinearLayout>

    <Button
        android:id="@+id/Receivebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="30dp"
        android:background="@color/appTheme2"
        android:text="받기"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Backbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="30dp"
        android:background="@color/appTheme2"
        android:text="돌아가기"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>